<table class="table table-striped table-condensed" id="bugs_table">
  <tr>
    <th>名稱</th>
    <th>提交時間</th>
    <th>項目</th>
    <th>嚴重性</th>
    <th>狀態</th>
  </tr>
  <% if user_bugs.each do |b| %>
      <tr>
        <td><%= link_to b.title, bug_show_path(b) %></td>
        <td><%= b.created_at %></td>
        <td><%= b.request.title %></td>
        <td><%= b.level %></td>
        <td><%= b.status %></td>
      </tr>
  <% end.empty? %>
  <% end %>
</table>
<%= will_paginate user_bugs, class: "apple_pagination", :param_name => "bug_page", :params => {:controller => 'profiles', :action => 'index'} %>
<script>
    $(function() {
        $("#bugs th a, #bugs .apple_pagination a").on("click", function(){
            $.getScript(this.href);
            return false;
        });
    });
</script>
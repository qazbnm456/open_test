<div class="container">
  <% @requests.each do |re| %>
    <div class="row">
      <div class="well col-md-8 col-md-offset-1">
        <div class="row">
          <div class="panel-segment-header-note col-md-2">
            獎金池總共有<%= re.total_money %>元</br>
            <%= re.status %></br>
          </div>
          <div class="panel-segment-header-main col-md-6 col-md-offset-1">
            <div class="panel-segment-title2"><%= link_to re.title, request_show_path(re) %> held by <%= re.client %></br></div>
            <div class="panel-segment-title3"><%= re.from %> ~ <%= re.to %></br></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
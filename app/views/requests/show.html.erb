<div class="row">
  <div class="well col-md-8 col-md-offset-1">
    <div class="row">
      <div class="panel-segment-header-note col-md-3">
        獎金池總共有<%= @request.total_money %>元</br>
        <%= @request.status %></br>
      </div>
      <div class="panel-segment-header-main col-md-6">
        <div class="panel-segment-title2"><%= @request.title %> held by <%= @request.client %></br></div>
        <div class="panel-segment-title3"><%= @request.from %> ~ <%= @request.to %></br></div>
      </div>
      <div class="pull-right col-md-3">
        <%= render 'enroll_form' if signed_in? %>
      </div>
    </div>
    </br>
    <div class="row">
      <div class="col-md-8" id="content">
        <%= sanitize @request.description %></br>
      </div>
    </div>
    <div class="row">
      <div class="progress progress-striped active">
        <div class="progress-bar progress-bar-danger">獎金池還剩餘<%= @remaining_money %>元</div>
      </div>
    </div>
  </div>
</div>
<script>
    $(function() {
        $.getScript(this.href);
    });
</script>
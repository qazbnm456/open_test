<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name, class: "col-md-2" %>
        <div class="col-md-10">
          <div class="form-control-wrapper">
            <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control empty" %>
            <span class="material-input"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-md-2" %>
        <div class="col-md-10">
          <div class="form-control-wrapper">
            <%= f.email_field :email, placeholder: "Email", class: "form-control empty" %>
            <span class="material-input"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-md-2" %>
        <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <div class="col-md-10">
          <div class="form-control-wrapper">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control empty" %>
            <span class="material-input"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-md-2" %>
        <div class="col-md-10">
          <div class="form-control-wrapper">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password", class: "form-control empty" %>
            <span class="material-input"></span>
          </div>
        </div>
      </div>

      <%= f.submit 'Register', class: "btn btn-large btn-primary" %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
